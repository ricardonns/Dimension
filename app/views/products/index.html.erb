<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Description</th>
    <th>Price</th>
    <th>Pricevat</th>
    <th>Priceorigin</th>
    <th>Priceoriginvat</th>
    <th>Expiredate</th>
    <th>Expired</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= Type.find_by_id(product.type_id).name %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= product.priceVat %></td>
    <td><%= product.priceOrigin %></td>
    <td><%= product.priceOriginVat %></td>
    <td><%= product.expireDate %></td>
    <td><%= product.expired %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

